<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.chip.Chip
        android:id="@+id/chip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_margin_start"
        android:layout_marginEnd="@dimen/small_margin_end"
        app:chipBackgroundColor="@color/color_chip_background"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="@dimen/extra_small_text_size"
        android:textColor="@color/color_text_chip"/>

</FrameLayout>